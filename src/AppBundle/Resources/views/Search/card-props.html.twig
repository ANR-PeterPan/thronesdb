{% import "AppBundle::macros.html.twig" as macros %}
<span class="card-props">
{% if card.type_code == 'character' or card.type_code == 'attachment' or card.type_code == 'event' or card.type_code == 'location' %}
	Cost: {{ macros.integer_or_x(card.cost) }}.
{% endif %}
{% if card.type_code == 'character' %}
	STR: {{ macros.integer_or_x(card.strength) }}.
	{% if card.isMilitary %}<span class="color-military icon-military" title="Military"></span>{% endif %}
	{% if card.isIntrigue %}<span class="color-intrigue icon-intrigue" title="Intrigue"></span>{% endif %}
	{% if card.isPower %}<span class="color-power icon-power" title="Power"></span>{% endif %}
{% endif %}
{% if card.type_code == 'plot' %}
	Income: {{ macros.integer_or_x(card.income) }}.
	Initiative: {{ macros.integer_or_x(card.initiative) }}.
	Claim: {{ macros.integer_or_x(card.claim) }}.
	Reserve: {{ macros.integer_or_x(card.reserve) }}.
	Plot deck limit: {{ macros.integer_or_x(card.plotLimit) }}.
{% endif %}
</span>
