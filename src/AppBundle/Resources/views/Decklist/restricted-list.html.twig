<!-- Restricted List -->
<table class="table table-condensed" id="table-restricted-list">
    <thead>
        <tr>
            <th colspan="4">
                <span class="fa fa-bell"></span>
                {{ 'decklist.list.restrictedlist.title' | trans }}
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <span class="fa {% if decklist.isLegalForJoust %}fa-check text-success{% else %}fa-times text-danger{% endif %}">
                    {{ 'decklist.list.restrictedlist.joust' | trans }}
                </span>
            </td>
            <td>
                <span class="fa {% if decklist.isLegalForMelee %}fa-check text-success{% else %}fa-times text-danger{% endif %}">
                    {{ 'decklist.list.restrictedlist.melee' | trans }}
                </span>
            </td>
        </tr>
    </tbody>
</table>
